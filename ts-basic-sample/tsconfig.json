{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    
    "esModuleInterop": true, 
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {},
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/important.js"],
}
